@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />

<div class="row">
    <div class="col-md-6">
        <div class="imgcontainer">
            @{ if (Model.Input.UserPhoto == null)
                {
                    <img src="~/images/avatarm.png" style="width:30%" />
                }
                else
                {
                    <img src="@Model.Input.UserPhoto" style="width:80%; height: 40%">
                }
            }
        </div>
    </div>


    <form id="profile-form" method="post" enctype=multipart/form-data>
        <div class="col-md-6">
            <div asp-validation-summary="All" class="text-danger"></div>
          
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
           
           
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            
           
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            
            
                <label asp-for="Gender"></label>
                <input asp-for="Gender" class="form-control" disabled />
           
           
                <label asp-for="Birthday"></label>
                <input asp-for="Birthday" class="form-control" disabled />
            
           
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            
        
                <label asp-for="Input.UserPhoto">Change Profile Picture</label>
                <input type="file" asp-for="Input.UserPhoto" class="form-control" accept=".png,.jpg,.jpeg,.gif,.tif" />
                <span asp-validation-for="Input.UserPhoto" class="text-danger"></span>
            
            <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>


</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
